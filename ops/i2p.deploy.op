# Cloning and updating code of i2p extension.
#
RUN if [ ! -d /home/$$ssh_username/code1/$$code_folder/extensions/i2p ]; then
    git clone https://$$git_username:$$git_password@github.com/leandrosardi/i2p /home/$$ssh_username/code1/$$code_folder/extensions/i2p
fi

RUN git -C /home/$$ssh_username/code1/$$code_folder/extensions/i2p fetch --all

RUN git -C /home/$$ssh_username/code1/$$code_folder/extensions/i2p reset --hard origin/master
